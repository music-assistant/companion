{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mass",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {"all": true},
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "squeezelite",
            "sidecar": true,
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.mass.app",
      "icon": [
        "icons/icon.png",
        "icons/192x192.png",
        "icons/icon.ico",
        "icons/icon.svg"
      ],
      "externalBin": [
        "binaries/squeezelite"
      ],
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Mass",
        "width": 800,
        "height": 600
      }
    ]
  }
}
